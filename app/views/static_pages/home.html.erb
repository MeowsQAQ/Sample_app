<% provide(:title,"Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info'%>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form'%>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
  <% else %>
    <div class="center jumbotron">
      <h1>HarryPorry#StaticPages#home</h1>
      <h2>Find me in app/views/static_pages/home.html.erb</h2>
      <h2 class= "center">
        Contratz me in
        <a href="https://meowsqaq.github.io/blog/">blog</a>
        Nice to meet you!
      </h2>
      <%= link_to "Sign up now!",signup_path,class:"btn btn-lg btn-primary" %>
    </div>
    <div class="center">
      <%= link_to image_tag("kitten.jpg",alt:"Rails logo"),
                  'https://meowsqaq.github.io/blog/' %>
    </div>
  <% end %>
